{
  "extends": "expo/tsconfig.base",
 "compilerOptions": {
  "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],                   
      "@components/*": ["./components/*"], 
      "@api/*": ["./api/*"],             
      "@context/*": ["./context/*"],     
      "@services/*": ["./services/*"],    
      "@assets/*": ["./assets/*"],    
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
